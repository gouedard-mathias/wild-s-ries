{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <div>
                    <a href="{{ path("program_season_show", { programSlug: program.slug, seasonId: season.id }) }}">
                        <h2>Saison {{ season.number }} sortie en {{ season.year }}</h2>
                    </a>
                    <p>{{ season.description }}</p>
                </div>
            {% else %}
                Aucune saison trouvée.
            {% endfor %}
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <a href="{{ path("actor_show", { id: actor.id }) }}">
                        <li>{{ actor.name }} </li>
                    </a>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
            {%endif%}
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}