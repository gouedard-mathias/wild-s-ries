{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.id }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <div class="program">
                <h1 class="mt-0">{{ program.title }}</h1>
                <p>{{ program.summary }}</p>
                <p>Catégorie : {{ program.category.name }}</p>
            </div>
            <div class="season">
                <h1 class="mt-0">Saison {{ season.number }} de {{ program.title }}</h1>
                <p>{{ season.description }}</p>
            </div>
            <div class="episodes">
                <p>Liste des épisodes :</p>
                <ul>
                    {% for episode in episodes %}
                        <a href="{{ path("program_episode_show", { programSlug: program.slug, seasonId: season.id, episodeSlug: episode.slug }) }}">
                            <li>Episode {{ episode.number }} : {{ episode.title }}</li>
                        </a>
                    {% else %}
                        Aucun épisode trouvé.
                    {% endfor %}
                </ul>
            </div>
            <a href="{{ path('program_show', {slug: program.slug}) }}">
                Retour à la liste des saisons
            </a>
        </div>
    </div>
{% endblock %}