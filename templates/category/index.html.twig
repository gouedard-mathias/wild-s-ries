{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les categories de la table category : </h1>
    {% for category in categories %}
        <div>

            <a href="{{ path("category_show", { categoryName: category.name }) }}">
                <h2>{{ loop.index }} / {{ category.name }}</h2>
            </a>
        </div>
    {% else %}
        Aucune categorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}